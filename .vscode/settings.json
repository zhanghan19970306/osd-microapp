{
  // 配合开启自动化修复
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": false
  },
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  "stylelint.validate": ["css", "scss", "less", "vue", "html"]
}
